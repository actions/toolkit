{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo clean && rm -rf node_modules",
    "check-all": "concurrently \"npm:format-check\" \"npm:lint\" \"npm:test\" \"npm:build -- -- --noEmit\"",
    "format": "prettier --write \"**/*.{json,cjs,js,ts}\"",
    "format:check": "prettier -c \"**/*.{json,cjs,js,ts}\"",
    "lint": "eslint packages/**/*.ts",
    "lint-fix": "eslint packages/**/*.ts --fix",
    "test": "vitest run"
  },
  "engines": {
    "node": "^16.20.0",
    "pnpm": "^8.6.1"
  },
  "packageManager": "pnpm@8.6.1",
  "devDependencies": {
    "@types/node": "16.18.36",
    "@typescript-eslint/parser": "^5.59.11",
    "concurrently": "^6.5.1",
    "eslint": "^8.42.0",
    "eslint-plugin-github": "^4.8.0",
    "prettier": "^2.8.8",
    "tsconfig": "workspace:*",
    "turbo": "1.10.3",
    "typescript": "5.1.3",
    "vitest": "0.32.0"
  }
}
