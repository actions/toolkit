{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@actions/core": [
        "packages/core"
      ],
      "@actions/http-client": [
        "packages/http-client"
      ],
    },
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/__mocks__/*"
  ]
}