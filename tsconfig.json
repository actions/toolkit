{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "target": "es2020",
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@actions/core": [
        "packages/core"
      ],
      "@actions/http-client": [
        "packages/http-client"
      ],
    },
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/__mocks__/*",
    "**/lib/**/*",
    "**/dist/**/*"
  ]
}